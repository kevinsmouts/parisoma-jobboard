<%= simple_form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
<fieldset class="control-group">
<div class="span5">
		<h2>User info</h2>
		<%= f.input :email, :required => true, :placeholder => "user@domain.com" %>
		<%= f.input :password, :required => true %>
		<%= f.input :password_confirmation, :required => true %>
</div>
	
<div class="span5 offset1">
	<h2>Company info</h2>
	<%= simple_fields_for :company, :html => { :class => 'form-horizontal' } do |fa| %>
		<% if @company.errors.any? %>
		<div class="alert alert-error">
			<%= @company.errors.full_messages.to_sentence %>
		</div>
		<% end %>
		<%= fa.input :name %>
	  	<%= fa.input :url %>
	  	<%= fa.input :description, :as => :text, :input_html => { :cols => 60, :rows => 3  } %>
	  	<%= fa.input :logo %>
	  	<%= fa.input :industry %>
	  	<%= fa.input :headquarters %>
	<% end %>
	
</div>
<div class="span12 well">
<div class="span5 offset6">
	<div class="controls">
		<%= f.submit "Register", :class => 'btn btn-primary' %>
		<%= link_to "Cancel", root_url, :class => 'btn' %>	

	</div>
</div>

</div>


	
</fieldset>
<% end %>
