<%= simple_form_for @job_offer, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :title %>
  <%= f.input :start_date %>
  <%= f.input :open_until %>
  <%= f.input :job_description %>
  <%= f.input :qualifications %>
  <%= f.input :field_of_expertise %>
  <%= f.input :location %>
  <%= f.input :contact_email %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                job_offers_path, :class => 'btn' %>
  </div>
<% end %>
