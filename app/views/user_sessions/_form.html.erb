<%= simple_form_for @user_session, :html => { :class => 'form-horizontal' } do |f| %>

	
	<%= f.input :email, :required => false, :placeholder => "user@domain.com" %>
	<%= f.input :password, :required => false %>


	<div class="form-actions">
		<%= f.submit "Log in", :class => 'btn btn-primary' %>
	</div>


<% end %>


