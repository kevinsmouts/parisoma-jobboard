<%= simple_form_for @user_session, :html => { :class => 'form-horizontal' } do |f| %>

	<fieldset class="control-group">
		
		

	<%= f.input :email, :required => false, :placeholder => "user@domain.com" %>
	<%= f.input :password, :required => false %>
	<div class="controls">
		<%= f.submit "Log in", :class => 'btn btn-parisoma' %>
	</div>
		</fieldset>
		
		<% end %>


	<div class="well well-small" style="text-align:center;">
		Don't have an account yet? <%= link_to "Register", register_path %>
	</div>


